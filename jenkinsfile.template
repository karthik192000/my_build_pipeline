pipeline {
    agent { 
        node {
            label 'docker_agent_alpine'
            }
      }        
    triggers {
        pollSCM '*/5 * * * *'
    }  
    stages {
        stage ('Check Maven'){
            steps {
                sh '''
                 mvn --version
                '''
            }
        }
        stage('Build') {
            steps {
                echo "Building Now.."
                sh '''
                git clone https://github.com/karthik192000/SpringBootApp.git
                cd SpringBootApp
                mvn clean install
                '''
            }
        }
        stage('Test') {
            steps {
                echo "Testing.."
                sh '''
                cd SpringBootApp
                ls -al
                java -jar SpringBootApp-1.0.0-SNAPSHOT
                '''
            }
        }
        stage('Ping'){
            steps{
                echo "Ping Test"
                sh '''
                 ping http://localhost:8080
                '''
            }
        }
        stage('Deliver') {
            steps {
                echo 'Deliver....'
                sh '''
                echo "doing delivery stuff.."
                '''
            }
        }
    }
}
